{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "importHelpers": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "build",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true,
    "sourceRoot": "./samples/aws-lambda-messenger"
  },
  "exclude": ["node_modules", "build"]
}
